@model UTEScholarshipSystem.Models.Student

@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4">
        <i class="fas fa-user"></i> Thông tin cá nhân
    </h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Thông tin sinh viên</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="StudentId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FullName" class="form-label">Họ tên</label>
                                    <input asp-for="FullName" class="form-control" readonly />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StudentCode" class="form-label">Mã số sinh viên</label>
                                    <input asp-for="StudentCode" class="form-control" readonly />
                                    <span asp-validation-for="StudentCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth" class="form-label">Ngày sinh</label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gender" class="form-label">Giới tính</label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="0">Nam</option>
                                        <option value="1">Nữ</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClassName" class="form-label">Lớp</label>
                                    <input asp-for="ClassName" class="form-control" readonly />
                                    <span asp-validation-for="ClassName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Faculty" class="form-label">Khoa</label>
                                    <input asp-for="Faculty" class="form-control" readonly />
                                    <span asp-validation-for="Faculty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Address" class="form-label">Địa chỉ</label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="GPA" class="form-label">GPA</label>
                                    <input asp-for="GPA" class="form-control" readonly />
                                    <span asp-validation-for="GPA" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3 text-end">
                            <a asp-action="Dashboard" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Ảnh đại diện</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="https://via.placeholder.com/150" class="rounded-circle img-thumbnail" alt="Avatar" style="width: 150px; height: 150px;">
                    </div>
                    <button type="button" class="btn btn-outline-primary disabled">
                        <i class="fas fa-upload"></i> Cập nhật ảnh
                    </button>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Thay đổi mật khẩu</h5>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-outline-primary w-100">
                        <i class="fas fa-key"></i> Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 