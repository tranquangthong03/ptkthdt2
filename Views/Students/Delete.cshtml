@model UTEScholarshipSystem.Models.Student
@{
    ViewData["Title"] = "Xóa sinh viên";
}

<div class="container mt-4">
    <h2 class="mb-4">Xóa sinh viên</h2>
    <div class="alert alert-danger">
        <strong>Bạn có chắc chắn muốn xóa sinh viên sau?</strong>
    </div>
    <dl class="row">
        <dt class="col-sm-4">Mã sinh viên</dt>
        <dd class="col-sm-8">@Model.StudentCode</dd>
        <dt class="col-sm-4">Họ và tên</dt>
        <dd class="col-sm-8">@Model.FullName</dd>
        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@Model.Email</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="StudentId" />
        <div class="text-end">
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
