@model UTEScholarshipSystem.Models.Student
@{
    ViewData["Title"] = "Chi tiết sinh viên";
}
<div class="container mt-4">
    <h2 class="mb-4">Chi tiết sinh viên</h2>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Mã sinh viên</dt>
                <dd class="col-sm-8">@Model.StudentCode</dd>
                <dt class="col-sm-4">Họ và tên</dt>
                <dd class="col-sm-8">@Model.FullName</dd>
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>
                <dt class="col-sm-4">Số điện thoại</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>
                <dt class="col-sm-4">Ngày sinh</dt>
                <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-4">Giới tính</dt>
                <dd class="col-sm-8">@Model.Gender</dd>
                <dt class="col-sm-4">Khoa</dt>
                <dd class="col-sm-8">@Model.Faculty</dd>
                <dt class="col-sm-4">Ngành học</dt>
                <dd class="col-sm-8">@Model.Major</dd>
                <dt class="col-sm-4">Lớp</dt>
                <dd class="col-sm-8">@Model.Class</dd>
                <dt class="col-sm-4">GPA</dt>
                <dd class="col-sm-8">@Model.GPA</dd>
            </dl>
            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
