@model UTEScholarshipSystem.Models.Scholarship
@{
    ViewData["Title"] = "Tạo học bổng mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (!User.IsInRole("Admin"))
{
    <div class="alert alert-danger mt-4">Bạn không có quyền truy cập chức năng này.</div>
    return;
}
<div class="container mt-4">
    <h2 class="mb-4">Tạo học bổng mới</h2>
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="MinGPA" class="form-label"></label>
                <input asp-for="MinGPA" class="form-control" type="number" step="0.01" min="0" max="4" />
                <span asp-validation-for="MinGPA" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="AcademicYear" class="form-label"></label>
                <input asp-for="AcademicYear" class="form-control" type="number" />
                <span asp-validation-for="AcademicYear" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="ApplicationStartDate" class="form-label"></label>
                <input asp-for="ApplicationStartDate" class="form-control" type="date" />
                <span asp-validation-for="ApplicationStartDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ApplicationEndDate" class="form-label"></label>
                <input asp-for="ApplicationEndDate" class="form-control" type="date" />
                <span asp-validation-for="ApplicationEndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="AdditionalRequirements" class="form-label"></label>
            <input asp-for="AdditionalRequirements" class="form-control" />
            <span asp-validation-for="AdditionalRequirements" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<UTEScholarshipSystem.Models.ScholarshipStatus>()"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="text-end">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <button type="submit" class="btn btn-primary">Tạo học bổng</button>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 